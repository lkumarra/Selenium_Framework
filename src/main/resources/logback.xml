<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <timestamp key="myTimestamp" datePattern="yyyy-MM-dd'_'HH-mm-ss.SSS"/>

    <!-- File Appender: Logs to a file with a timestamp in the filename -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${user.dir}/src/test/resources/logs/execution_${myTimestamp}.log</file>
        <append>false</append>
        <encoder>
            <!-- Includes date, time, thread, log level, class, method, and line number -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender: Logs to the console with colors and highlighting -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Add color and highlight different parts of the log -->
            <pattern>%highlight(%d{yyyy-MM-dd HH:mm:ss.SSS}) %boldGreen([%thread]) %highlight(%-5level) %boldCyan(%logger{36}.%M:%L) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Disable JDBC and TestNG logging -->
    <logger name="jdbc" level="OFF"/>
    <logger name="org.testng" level="OFF"/>

    <!-- Log only WARN level for SQL-related logs -->
    <logger name="jdbc.sqlonly" level="WARN" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Root Logger: Log everything to both console and file -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/> <!-- Logs appear in console -->
        <appender-ref ref="FILE"/>   <!-- Logs appear in file -->
    </root>
</configuration>
